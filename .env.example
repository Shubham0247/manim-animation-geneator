# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview
# Optional: if omitted, AZURE_OPENAI_DEPLOYMENT will be used
OPENAI_MODEL=

# LangSmith Configuration (optional, for LangGraph Studio)
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Manim Configuration
MANIM_OUTPUT_DIR=videos
MANIM_DEFAULT_QUALITY=medium
MANIM_DEFAULT_RESOLUTION=1920x1080

# LangGraph Configuration
MAX_RETRIES=3

# MCP Configuration
MCP_TIMEOUT_SECONDS=300
